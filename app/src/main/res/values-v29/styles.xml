<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        API 29+ 的主题。
        继承自基础 AppTheme，并添加了禁用强制深色模式的属性。
    -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 禁用强制深色模式，以避免在某些系统上（如MIUI）破坏游戏标题的可见性 -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>